<h1>Login</h1>

<%= form_with url: sessions_path, method: :post, local: true do %>
  <div>
    <%= label_tag :email, "Email:" %>
    <%= text_field_tag :email, nil, placeholder: "Enter your email", class: "form-control" %>
  </div>

  <div>
    <%= label_tag :password, "Password:" %>
    <%= password_field_tag :password, nil, placeholder: "Enter your password", class: "form-control" %>
  </div>

  <div>
    <%= submit_tag "Login", class: "btn btn-primary" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
